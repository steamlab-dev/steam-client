{
  "name": "@steamlab/steam-client",
  "version": "0.0.1",
  "description": "Steam client implementation in TypeScript for Node.js.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "types": "./dist/index.d.cts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "protos"
  ],
  "scripts": {
    "postinstall": "test -f .git/config && husky || true",
    "dev": "tsx watch src/index.ts",
    "type-check": "tsc",
    "check": "biome check .",
    "fix": "biome check --write .",
    "test": "vitest",
    "test:connection": "vitest tests/connection/",
    "test:steam-client": "vitest tests/steam-client/",
    "test:common": "vitest tests/common/",
    "test:package": "./scripts/test-package.sh",
    "build": "tsdown",
    "prepublishOnly": "npm run build",
    "generate-resources": "tsx ./scripts/index.ts"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "license": "ISC",
  "keywords": [
    "steam",
    "steam api",
    "steam client"
  ],
  "engines": {
    "npm": ">=9.5.1",
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@steamlab/steam-crypto": "^0.0.2",
    "long": "^5.3.2",
    "protobufjs": "^8.0.0",
    "qrcode": "^1.5.4",
    "smart-buffer": "^4.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^25.2.1",
    "@types/qrcode": "^1.5.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsdown": "^0.20.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/steamlab-dev/steam-client.git"
  },
  "bugs": {
    "url": "https://github.com/steamlab-dev/steam-client/issues"
  },
  "homepage": "https://github.com/steamlab-dev/steam-client#readme"
}
